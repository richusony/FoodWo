<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Offer Management</title>
    <link href="/public/css/output.css" rel="stylesheet">
    <link rel="apple-touch-icon" sizes="180x180" href="/public/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/public/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/images/favicon-16x16.png">
    <script src="https://kit.fontawesome.com/70218ce737.js" crossorigin="anonymous"></script>
    <style>
        /* Hide the default scrollbar */
        .overflow-x-auto::-webkit-scrollbar {
            display: none;
        }

        /* Define the scrollbar track (optional) */
        .overflow-x-auto::-webkit-scrollbar-track {
            background: transparent;
            /* You can customize the track's appearance */
        }

        /* Define the scrollbar thumb (optional) */
        .overflow-x-auto::-webkit-scrollbar-thumb {
            background: transparent;
            /* You can customize the thumb's appearance */
        }

        .text-ellipsis {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>

<body class="bg-gray-200">
    <!-- Navigation -->
    <%- include('adminNavbar') %>

        <section class="px-5 py-2 min-h-screen">

            <h1 class="text-2xl font-bold my-5">Offer Management</h1>

            <div class="py-2 px-3 text-end">
                <button onclick="redirectTo('/admin/new-offer')"
                    class="px-3 py-2 bg-orange-500 text-white rounded">Create Offer <i
                        class="fa-solid fa-tag"></i></button>
            </div>

            <div class="flex flex-col md:flex-row justify-between items-center py-2 px-3">

                <div class="bg-white py-2 px-3">

                    <h1 class="py-2 font-semibold text-lg border-b border-gray-500">Product Offers</h1>

                    <% if(productOff){ productOff.forEach((off,index)=>{%>
                        <div class="flex justify-between py-2 my-2">
                            <span class="mx-2">
                                <%=index+1%>
                            </span>
                            <span class="mx-2">
                                <%=off.productName%>
                            </span>
                            <span class="mx-2">
                                <%=off.discountValue%><% if(off.discountType=="per" ){ %>%<%}else{%>Rs<%}%>
                            </span>
                            <span class="mx-2"><i
                                    class="fa-regular text-orange-500 cursor-pointer fa-pen-to-square"></i></span>
                        </div>
                        <%})}%>

                </div>


                <div class="bg-white py-2 px-3">

                    <h1 class="py-2 font-semibold text-lg border-b border-gray-500">Category Offers</h1>
                    <% if(categoryOff){ categoryOff.forEach((off,index)=>{%>
                        <div class="flex justify-between py-2 my-2">
                            <span class="mx-2">
                                <%=index+1%>
                            </span>
                            <span class="mx-2">
                                <%=off.categoryName%>
                            </span>
                            <span class="mx-2">
                                <%=off.discountValue%><% if(off.discountType=="per" ){ %> % <%}else{%>Rs<%}%>
                            </span>
                            <span class="mx-2"><i
                                    class="fa-regular text-orange-500 cursor-pointer fa-pen-to-square"></i></span>
                        </div>
                        <%})}%>

                </div>

            </div>

        </section>

        <!-- Footer -->
        <%- include('adminFooter') %>

            <script>
                function redirectTo(endpoint) {
                    window.location.href = endpoint;
                }
            </script>
</body>

</html>